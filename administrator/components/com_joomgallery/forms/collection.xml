<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Joomgallery\Component\Joomgallery\Administrator\Field">
  <fieldset name="general">
    <field name="id"
           type="text"
           readonly="true"
           class="readonly"
           label="JGLOBAL_FIELD_ID_LABEL" />

    <field name="userid"
           type="user"
           label="JGLOBAL_FIELD_USERID_LABEL"
           description="JGLOBAL_FIELD_USERID_DESC"
           validate="UserId" />

    <field name="title"
           type="text"
           maxlength="255"
           filter="string"
           required="true"
           autofocus="true"
           label="JGLOBAL_TITLE" />

    <field name="alias"
           type="text"
           maxlength="255"
           generator="title"
           label="JALIAS"
           description="JFIELD_ALIAS_DESC" />

    <field name="description"
           type="editor"
           buttons="true"
           filter="\Joomla\CMS\Component\ComponentHelper::filterText"
           label="JGLOBAL_DESCRIPTION" />

    <field name="published"
           type="radio"
           layout="joomla.form.field.radio.switcher"
           class="btn-group"
           default="1"
           label="JPUBLISHED">
        <option value="0">JNO</option>
        <option value="1">JYES</option>
    </field>

    <field name="access"
           type="accesslevel"
           label="JFIELD_ACCESS_LABEL"
           description="JFIELD_ACCESS_DESC"
           size="1" />

    <field name="language"
           type="language"
           client="administrator"
           label="JGRID_HEADING_LANGUAGE"
           >
           <option value="*">JALL</option>
    </field>

    <field name="created_by"
           type="user"
           label="COM_JOOMGALLERY_OWNER"
           description="JGLOBAL_FIELD_CREATED_BY_DESC"
           validate="UserId" />

    <field name="modified_by"
           type="user"
           class="readonly"
           readonly="true"
           filter="unset"
           validate="UserId"
           label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
           description="JGLOBAL_FIELD_MODIFIED_BY_DESC" />

    <field name="modified_time"
           type="calendar"
           class="form-control"
           translateformat="true"
           showtime="true"
           size="22"
           readonly="true"
           filter="user_utc"
           label="JGLOBAL_FIELD_MODIFIED_LABEL" />

    <field name="metadesc"
           type="textarea"
           cols="40"
           rows="5"
           filter="safehtml"
           label="JGLOBAL_DESCRIPTION"
           description="JFIELD_META_DESCRIPTION_LABEL"
           maxlength="160"
           charcounter="true" />

    <field name="metakey"
           type="textarea"
           cols="40"
           rows="5"
           filter="string"
           label="JFIELD_META_KEYWORDS_LABEL"
           description="JFIELD_META_KEYWORDS_DESC" />
  </fieldset>
  <fieldset name="accesscontrol">
    <field name="asset_id"
           type="hidden"
           filter="unset" />

    <field name="rules"
           type="rules"
           asset_field="asset_id"
           label="JFIELD_RULES_LABEL"
           translate_label="false"
           filter="rules"
           validate="rules"
           class="inputbox"
           component="com_joomgallery"
           section="collection" />
  </fieldset>
</form>
